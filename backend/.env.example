# ============================================================
# ENTERPRISE HR SYSTEM - ENVIRONMENT CONFIGURATION
# ============================================================

# Server Configuration
PORT=5000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=company

# AI Engine URLs
LEAVE_AI_URL=http://localhost:8001
ONBOARDING_AI_URL=http://localhost:8002

# ============================================================
# INTEGRATION CREDENTIALS (Fill in to enable)
# ============================================================

# Google Calendar Integration
# Setup: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5000/api/integrations/google/callback

# Microsoft Outlook/365 Integration
# Setup: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
OUTLOOK_TENANT_ID=
OUTLOOK_REDIRECT_URI=http://localhost:5000/api/integrations/outlook/callback

# Slack Integration
# Setup: https://api.slack.com/apps
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_WEBHOOK_URL=

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=

# Email Configuration (Choose one provider)
EMAIL_PROVIDER=smtp
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@company.com
FROM_NAME=Company HR

# SendGrid (Alternative to SMTP)
SENDGRID_API_KEY=

# AWS SES (Alternative to SMTP)
AWS_ACCESS_KEY=
AWS_SECRET_KEY=
AWS_REGION=us-east-1

# Payroll Integration
# Supported providers: adp, workday, bamboohr, custom
PAYROLL_PROVIDER=custom
PAYROLL_API_URL=
PAYROLL_API_KEY=
PAYROLL_CLIENT_ID=
PAYROLL_CLIENT_SECRET=

# ============================================================
# FEATURE FLAGS
# ============================================================
ENABLE_CALENDAR_SYNC=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_TEAMS_NOTIFICATIONS=false
ENABLE_PAYROLL_SYNC=false
ENABLE_AUTO_APPROVAL=true
ENABLE_AI_RECOMMENDATIONS=true

# ============================================================
# COMPLIANCE SETTINGS
# ============================================================
AUDIT_LOG_RETENTION_DAYS=2555
GDPR_ENABLED=true
DATA_ENCRYPTION_KEY=
